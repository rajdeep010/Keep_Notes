<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>Searched Docs</title>

    <link rel="icon" type="image/x-icon" href="./images/favicon.ico">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">


    <!-- **** Adding Some CSS for specific work **** -->
    <link rel="stylesheet" href="./css/navbar.css">
    <link rel="stylesheet" href="./css/button.css">
    <link rel="stylesheet" href="./css/dashboard.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700;900&family=Montserrat:wght@700;800;900&family=Poppins:wght@300;400;500&family=Roboto:wght@300;400&family=Tilt+Prism&family=Work+Sans:wght@300;400;500;600;700;900&display=swap"
        rel="stylesheet">
</head>

<body>
    <!-- -----*** NAVBAR SECTION STARTS HERE *****------- -->

    <%- include('../partials/navbar.ejs') %>

        <!-- ********** NAVBAR ENDS **********-->


        <!-- ----***** Documents Section  *****---- -->

        <section class="documents-container" id="mydocs">

            <div class="documents">

                <h1 class="heading" style="margin-top: 5rem;">
                    <i class="fas fa-search"></i>
                    Search <span>Docs</span>
                </h1>

                <div class="accordion" id="accordionPanelsStayOpenExample">

                    <% for(var i = 0; i < documents.length; i++) { %>

                        <% if(i == 0) { %>
                            <div class="accordion-item box">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
                                        aria-controls="panelsStayOpen-collapseOne">
                                        <%= documents[i].noteTitle %>
                                    </button>
                                </h2>
                                <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                                    <div class="accordion-body">
                                        <%= documents[i].description %>
                                    </div>
    
                                    <div class="forms">
    
                                        <form action='/docs/<%= documents[i]._id %>' method="get">
    
                                            <button type="submit" class="btn">Prescription <span
                                                    class="fas fa-image button-icon"></span>
                                            </button>
    
                                        </form>
    
                                        <form action='/docs/delete/<%= documents[i]._id %>' method="post">
    
                                            <button type="submit" class="btn">Remove <span
                                                    class="fas fa-trash-alt button-icon"></span>
                                            </button>
    
                                        </form>
    
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="accordion-item box">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                                        <%= documents[i].noteTitle %>
                                    </button>
                                </h2>
                                <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
                                    <div class="accordion-body">
                                        <%= documents[i].description %>
                                    </div>
    
                                    <div class="forms">
    
                                        <form action='/docs/<%= documents[i]._id %>' method="get">
    
                                            <button type="submit" class="btn">Prescription <span
                                                    class="fas fa-image button-icon"></span>
                                            </button>
    
                                        </form>
    
                                        <form action='/docs/delete/<%= documents[i]._id %>' method="post">
    
                                            <button type="submit" class="btn">Remove <span
                                                    class="fas fa-trash-alt button-icon"></span>
                                            </button>
    
                                        </form>
    
                                    </div>
                                </div>
                            </div>
                        <% } %>

                    <% } %>

                </div>

                <div class="image" id="document-image">
                    <!-- <img src="./images/add docs.svg" alt=""> -->

                    <span>
                        <a href="/docadd" target="_blank">
                            <button class="btn">
                                Add Document <span class="fas fa-angle-double-right"></span>
                            </button>
                        </a>
                    </span>
                </div>


            </div>

        </section>


        <!--  ========= JS PART ============ -->

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>

        <script>

            const nav = document.querySelector(".nav"),
                navOpenBtn = document.querySelector(".navOpenBtn"),
                navCloseBtn = document.querySelector(".navCloseBtn");


            navOpenBtn.addEventListener("click", () => {
                nav.classList.add("openNav");
            });


            navCloseBtn.addEventListener("click", () => {
                nav.classList.remove("openNav");
            });

        </script>
</body>

</html>